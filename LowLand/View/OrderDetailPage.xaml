<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="LowLand.View.OrderDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LowLand.View"
    xmlns:model="using:LowLand.Model.Order"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F5F5F5">

    <Grid Padding="36">
        <StackPanel Spacing="24">
            <TextBlock Text="Chi tiết đơn hàng" FontSize="24" FontWeight="Bold"/>

            <Grid Background="White" CornerRadius="8" Padding="16" >
                

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Mã đơn hàng:" Grid.Row="0" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,10"/>
                <TextBlock Text="{x:Bind ViewModel.EditorAddOrder.Id}" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,10"/>
                


                <TextBlock Text="Khách hàng:" Grid.Row="1" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,10"/>
                <TextBlock Text="{x:Bind ViewModel.EditorAddOrder.CustomerName}" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,10"/>
                <TextBlock Text="Trạng thái khách hàng:" Grid.Row="2" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,10"/>
                <TextBlock Text="{x:Bind ViewModel.EditorAddOrder.CustomerStatus}" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,10"/>

                <TextBlock Text="Số điện thoại:" Grid.Row="3" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,10"/>
                <TextBlock Text="{x:Bind ViewModel.EditorAddOrder.CustomerPhone}" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,10"/>

                <TextBlock Text="Trạng thái đơn hàng:" Grid.Row="4" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,10"/>
                <TextBlock Text="{x:Bind ViewModel.EditorAddOrder.Status}" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,10"/>
            </Grid>

            <StackPanel>
                <Grid Padding="16" CornerRadius="8" Background="#E0E0E0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Mã sản phẩm" Grid.Column="0" TextAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Text="Tên sản phẩm" Grid.Column="1" TextAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Text="Số lượng" Grid.Column="2" TextAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Text="Đơn giá" Grid.Column="3" TextAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Text="Lựa chọn thêm" Grid.Column="4" TextAlignment="Center" FontWeight="Bold"/>
                </Grid>

                <ListView ItemsSource="{x:Bind ViewModel.EditorAddOrder.Details}" SelectionMode="None" CornerRadius="8" Margin="0, 8, 0, 0"
                      Background="White">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="model:OrderDetail">
                            <Grid Padding="12" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{x:Bind ProductId}" TextAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="{x:Bind ProductName}" TextAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="{x:Bind quantity}" TextAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="3" Text="{x:Bind Price}" TextAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="4" Text="{x:Bind OptionName}" TextAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
