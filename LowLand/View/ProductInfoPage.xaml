<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="LowLand.View.ProductInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LowLand.View"
    xmlns:model="using:LowLand.Model.Product"
    xmlns:converter="using:LowLand.View.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converter:AbsolutePathConverter x:Key="AbsolutePathConverter"/>
        <DataTemplate x:Key="ComboBoxTemplate1" x:DataType="model:Category">
            <TextBlock>
                <Run Text="{x:Bind Id}"/> - <Run Text="{x:Bind Name}"/>
            </TextBlock>
        </DataTemplate>
        <DataTemplate x:Key="ComboBoxTemplate2" x:DataType="model:ProductType">
            <TextBlock>
    <Run Text="{x:Bind Id}"/> - <Run Text="{x:Bind Name}"/>
            </TextBlock>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Thay đổi thông tin sản phẩm" Style="{StaticResource TitleTextBlockStyle}" Margin="36, 40, 0, 36"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Background="{StaticResource CardBackgroundFillColorDefaultBrush}" Padding="24" Margin="36, 0, 16, 16" CornerRadius="8">
                <TextBlock Text="Ảnh sản phẩm" Style="{StaticResource SubtitleTextBlockStyle}" VerticalAlignment="Center" Margin="0, 0, 0, 24"/>
                <Border CornerRadius="4" Width="230" Height="230" BorderBrush="Aqua" BorderThickness="2">
                    <Image Source="{x:Bind ViewModel.Product.Image}"/>
                </Border>
            </StackPanel>


            <Grid Grid.Column="1" Background="{StaticResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="24" Margin="0, 0, 36, 16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Thông tin cơ bản" Style="{StaticResource SubtitleTextBlockStyle}" VerticalAlignment="Center" Margin="0, 0, 0, 24"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ProductBasicInfo"  Spacing="16">
                        <TextBox 
                            Header="ID" 
                            IsEnabled="False"
                            Text="{x:Bind ViewModel.Product.Id, Mode=TwoWay}" 
                            Style="{StaticResource BodyTextBlockStyle}" 
                            VerticalAlignment="Center"/>
                        <TextBox 
                            Header="Tên sản phẩm" 
                            Text="{x:Bind ViewModel.Product.Name, Mode=TwoWay}" 
                            Style="{StaticResource BodyTextBlockStyle}" 
                            VerticalAlignment="Center"/>
                        <NumberBox 
                            Header="Giá bán mặc định" 
                            Text="{x:Bind ViewModel.Product.SalePrice, Mode=TwoWay}" 
                            Style="{StaticResource BodyTextBlockStyle}" 
                            VerticalAlignment="Center"/>
                        <NumberBox 
                            Header="Giá vốn mặc định" 
                            Text="{x:Bind ViewModel.Product.CostPrice, Mode=TwoWay}" 
                            Style="{StaticResource BodyTextBlockStyle}" 
                            VerticalAlignment="Center"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>

        <Grid x:Name="OptionContainer" Grid.Row="2" Background="{StaticResource CardBackgroundFillColorDefaultBrush}" Padding="24" Margin="36, 0, 36, 16" CornerRadius="8">
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8" Margin="36, 0, 36, 36">
            <Button x:Name="ApplyButton" Content="Áp dụng" Click="ApplyButton_Click"/>
            <Button x:Name="CancelButton" Content="Hủy" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
