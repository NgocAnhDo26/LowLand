<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="LowLand.View.AddCustomerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LowLand.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <TextBlock Text="Thêm khách hàng" FontSize="24" Margin="36, 40, 0, 36"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Spacing="10">
            <TextBox x:Name="NameTextBox" Header="Tên khách hàng" PlaceholderText="Nhập tên..." />
            <TextBox x:Name="PhoneTextBox" Header="Số điện thoại" PlaceholderText="Nhập số điện thoại..." />
           
            <StackPanel Orientation="Horizontal">

            <Button x:Name="addButton" Content="Thêm khách hàng" Click="addButton_Click" Margin="0,0,30,0"/>
            <Button x:Name="CancelButton" Content="Hủy" Click="CancelButton_Click"/>
        </StackPanel>
        </StackPanel>
    </Grid>
</Page>
