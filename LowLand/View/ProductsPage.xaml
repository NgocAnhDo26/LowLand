<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="LowLand.View.ProductsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LowLand.View"
    xmlns:model="using:LowLand.Model.Product"
    xmlns:converter="using:LowLand.View.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <converter:AbsolutePathConverter x:Key="AbsolutePathConverter"/>
        <converter:CurrencyFormatter x:Key="CurrencyFormatter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Danh sách sản phẩm" Style="{StaticResource TitleTextBlockStyle}" Margin="36, 40, 0, 36"/>

        <Grid Grid.Row="1" Margin="36, 0, 0, 16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <AutoSuggestBox Grid.Column="0" PlaceholderText="Tìm kiếm sản phẩm..." QueryIcon="Find" Width="300" />
            
            <Rectangle Grid.Column="2"/>
            <Button Grid.Column="3" Margin="0, 0, 36, 0" x:Name="addNewProductButton" Click="addNewProductButton_Click" Style="{StaticResource AccentButtonStyle}">
                <Button.Content>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE710;"/>
                        <TextBlock Text="Thêm sản phẩm"/>
                    </StackPanel>
                </Button.Content>
            </Button>
        </Grid>

        <Grid Grid.Row="2" x:Name="HeaderGrid" Margin="36, 0, 36, 8" Padding="16" CornerRadius="4" Background="{StaticResource CardBackgroundFillColorDefaultBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="ID" Grid.Column="0" TextAlignment="Center" Style="{StaticResource BodyStrongTextBlockStyle}"/>
            <TextBlock Text="Sản phẩm" Grid.Column="1" TextAlignment="Center" Style="{StaticResource BodyStrongTextBlockStyle}"/>
            <TextBlock Text="Danh mục" Grid.Column="2" TextAlignment="Center" Style="{StaticResource BodyStrongTextBlockStyle}"/>
            <TextBlock Text="Giá vốn" Grid.Column="3" TextAlignment="Center" Style="{StaticResource BodyStrongTextBlockStyle}"/>
            <TextBlock Text="Giá bán" Grid.Column="4" TextAlignment="Center" Style="{StaticResource BodyStrongTextBlockStyle}"/>
            <TextBlock Grid.Column="5" TextAlignment="Center"/>
        </Grid>

        <ListView Grid.Row="3" ItemsSource="{x:Bind ViewModel.Products}" CornerRadius="4" Margin="36, 0, 36, 24"
          Background="{StaticResource CardBackgroundFillColorDefaultBrush}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:Product">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="{x:Bind Id}" TextAlignment="Center" VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16" Margin="8">
                            <Border x:Name="ProductImageBorder" CornerRadius="4" Width="80" Height="80" VerticalAlignment="Center">
                                <Image Source="/Assets/product_default.jpg"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center" Spacing="4">
                                <TextBlock Text="{x:Bind Name}" Style="{StaticResource BodyTextBlockStyle}" TextWrapping="WrapWholeWords"/>
                                <TextBlock Text="{Binding ProductType.Name, Mode=TwoWay}" Style="{StaticResource CaptionTextBlockStyle}"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Grid.Column="2" VerticalAlignment="Center" Text="{Binding Category.Name, Mode=TwoWay}" TextAlignment="Center"/>
                        <TextBlock Grid.Column="3" VerticalAlignment="Center" Text="{x:Bind CostPrice, Mode=TwoWay, Converter={StaticResource CurrencyFormatter}}" TextAlignment="Center"/>
                        <TextBlock Grid.Column="4" VerticalAlignment="Center" Text="{x:Bind SalePrice, Mode=TwoWay, Converter={StaticResource CurrencyFormatter}}" TextAlignment="Center"/>

                        <DropDownButton Grid.Column="5">
                            <DropDownButton.Content>
                                <FontIcon Glyph="&#xE712;"/>
                            </DropDownButton.Content>
                            <DropDownButton.Flyout>
                                <MenuFlyout Placement="Bottom">
                                    <MenuFlyoutItem Text="Thay đổi" Click="ViewDetails_Click">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE70F;"/>
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>

                                    <MenuFlyoutItem Text="Xóa" Foreground="Red" Click="DeleteProduct_Click">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE74D;" Foreground="Red"/>
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                </MenuFlyout>
                            </DropDownButton.Flyout>

                        </DropDownButton>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>