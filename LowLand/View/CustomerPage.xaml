<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="LowLand.View.CustomerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LowLand.View"
    xmlns:model="using:LowLand.Model.Customer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <DataTemplate x:Key="CustomerListTemplate" x:DataType="model:Customer">
            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="8" Padding="10" Margin="5">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="{x:Bind Name}" FontWeight="Bold" FontSize="18" Foreground="Blue"/>
                    <TextBlock Text="{x:Bind Phone}" Foreground="Black" FontSize="14"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Points: " Foreground="Red" FontSize="14"/>
                        <TextBlock Text="{x:Bind Point}" Foreground="Red" FontSize="14"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Rank: " Foreground="Green" FontSize="14"/>
                        <TextBlock Text="{x:Bind RankName}" Foreground="Green" FontSize="14"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <StackPanel>
        <TextBlock Text="Customer List" FontSize="20" FontWeight="Bold" Margin="10"/>
        <ListView x:Name="customersListView"
                  ItemsSource="{x:Bind ViewModel.Customers, Mode=TwoWay}"
                  ItemTemplate="{StaticResource CustomerListTemplate}"
                  SelectionMode="Single"/>

        <Button Content="Manage Customers" Click="OpenCustomerEditPage" Margin="10"/>
    </StackPanel>
</Page>
